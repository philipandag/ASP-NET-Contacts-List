{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es2015",
    "lib": [ "es2015", "dom" ],
    "outDir": "wwwroot/js",
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "wwwroot/scripts/**/*"
  ]
}
